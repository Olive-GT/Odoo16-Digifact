<odoo>
    <record id="view_move_form_inherit_fel" model="ir.ui.view">
        <field name="name">account.move.form.inherit.fel</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page string="FEL">
                    <group string="FEL" name="fel_group" colspan="2">
                        <field name="fel_reference"/>
                        <field name="fel_number"/>
                        <field name="fel_authorization_number"/>
                        <field name="certified"/>
                    </group>
                </page>
            </xpath>
            <xpath expr="//sheet" position="inside">
                <group string="Notas" name="note_group" colspan="2">
                    <field name="note"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="view_move_tree_inherit_fel" model="ir.ui.view">
        <field name="name">account.move.tree.inherit.fel</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='state']" position="after">
                <field name="certified" widget="boolean_button" options="{'terminology': {'true': 'Certificado', 'false': 'No Certificado'}}"/>
            </xpath>
            <xpath expr="//tree/field[@name='state']" position="attributes">
                <attribute name="widget">statusbar</attribute>
                <attribute name="options">{'clickable': False, 'tooltip': 'note'}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
